@model OnlineStationary.Response.CustomerResponseModel

@{
    ViewData["Title"] = "Customer Details";
}

<div class="container">
    <h2 class="text-center my-4">@ViewData["Title"]</h2>

    @if (TempData["success"] != null)
    {
            <div class="alert alert-success text-center">@TempData["success"]</div>
    }
    else if (TempData["error"] != null)
    {
            <div class="alert alert-danger text-center">@TempData["error"]</div>
    }

    <div class="card">
        <div class="card-body">
            <h5 class="card-title">Customer Information</h5>

            <div class="row">
                <div class="col-md-6">
                    <p><strong>Username:</strong> @Model.Username</p>
                    <p><strong>Email:</strong> @Model.Email</p>
                    <p><strong>Phone Number:</strong> @Model.PhoneNumber</p>
                </div>
                <div class="col-md-6">
                    <p><strong>Address:</strong> @Model.Address</p>
                    <p><strong>Gender:</strong> @Model.Gender</p>
                </div>
            </div>

            <div class="text-center mt-4">
                <a asp-action="GetAllCustomer" class="btn btn-primary">Back to Customers</a>
                <a asp-action="UpdateCustomer" asp-route-id="@Model.Id" class="btn btn-warning">Update Customer</a>
            </div>
        </div>
    </div>
</div>

