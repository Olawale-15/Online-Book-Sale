@model IEnumerable<OnlineStationary.Response.BookResponseModel>

@{
    ViewBag.Title = "Available Books";
}

<h2>Available Books</h2>

@if (Model != null )
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Book Name</th>
                <th>Title</th>
                <th>Description</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Page Number</th>
                <th>Image</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@book.Name</td>
                    <td>@book.Tittle</td>
                    <td>@book.Description</td>
                    <td>@book.Price</td>
                    <td>@book.Quantity</td>
                    <td>@book.PageNumber</td>
                    <td>
                        <img src="@book.Image" alt="@book.Name" width="100" height="150" />
                    </td>
                    <td>
                        <div>
                            <a asp-controller="Order" asp-action="MakeOrder" asp-route-id="@book.Id" class="btn btn-primary">Order</a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No books available at the moment.</p>
}

