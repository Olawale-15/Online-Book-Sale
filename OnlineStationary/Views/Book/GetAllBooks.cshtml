@model IEnumerable<OnlineStationary.Response.BookResponseModel>


@{
    ViewData["Title"] = "Available Books";
}

<h2>Available Books</h2>

<div id="booksContainer" class="row">
    @foreach (var book in Model)
    {
        <div class="col-md-4 mb-4">
            <div class="card h-100">
                <img class="card-img-top" src="@book.Image" alt="Book image" />
                <div class="card-body">
                    <h5 class="card-title">@book.Name</h5>
                    <p class="card-text"><strong>Price:</strong> @book.Price</p>
                    <p class="card-text"><strong>Quantity:</strong> @book.Quantity</p>
                    <p class="card-text"><strong>Page Number:</strong> @book.PageNumber</p>
                    <p class="card-text"><strong>Description:</strong> @book.Description</p>
                    <p class="card-text"><strong>Title:</strong> @book.Tittle</p>
                </div>
            </div>
        </div>
       
    }
</div>


<!-- Success/Error Message Display -->
<div id="orderMessage" class="mt-4"></div>

